#!/bin/bash

set -euf

YTID="${1##https://www.youtube.com/watch?v=}"

exec ~/bin/youtube-dl -k --user-agent 'Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/65.0.3325.181 Safari/537.36' --referer "$YTID" '-f' 'bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]/best,bestvideo[ext=webm]+bestaudio[ext=webm],bestaudio[asr>44100]' '-o' '%(title)s.f%(format_id)s.%(ext)s' -- "${YTID}"

